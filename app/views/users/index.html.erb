<div class="content_header">
  <h2>Listing all users</h2>
</div>

<table>
  <tr>
    <th><%= t('user.email') %></th>
    <th><%= t('user.server_access') %></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.email, user_path(user) %></td>
      <td><%= user.game_manager_assignments.where('rights > 0').count %></td>
    </tr>
  <% end %>
</table>


<%= form_with scope: :user,  method: :get, url: new_user_path, local: true do |form| %>
  <%= submit_tag('New User') %>
<% end %>